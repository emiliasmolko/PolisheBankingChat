<resources>

    <declare-styleable name="ParticleView">
        <attr name="pv_host_text" format="string" />
        <attr name="pv_host_text_size" format="dimension" />
        <attr name="pv_particle_text" format="string" />
        <attr name="pv_particle_text_size" format="dimension" />
        <attr name="pv_text_color" format="color" />
        <attr name="pv_background_color" format="color" />
        <attr name="pv_text_anim_time" format="integer" />
        <attr name="pv_spread_anim_time" format="integer" />
        <attr name="pv_host_text_anim_time" format="integer" />
    </declare-styleable>

    <declare-styleable name="FancyButton">
        <attr name="btnStyle" format="enum">
            <enum name="stroke" value="0"/>
            <enum name="fill" value="1"/>
            <enum name="stroke_fill" value="2"/>
        </attr>
        <attr name="text" format="string"/>
        <attr name="textColor" format="color"/>
        <attr name="fillColor" format="color"/>
        <attr name="strokeColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="hideFillAfterCollapse" format="boolean"/>
        <attr name="strokeWidth" format="integer"/>
        <attr name="capsText" format="boolean"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

</resources>
